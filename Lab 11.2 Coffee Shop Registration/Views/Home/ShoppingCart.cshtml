
@{
    ViewBag.Title = "ShoppingCart";

}

<h1>@ViewBag.Message</h1>

<p>
    <a class="btn btn-default"style="background-color:burlywood" href="/home/Menu" target="_blank">Continue Shopping &raquo;</a>
    
</p>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/Content/Style.css">
    <script src="~/ShoppingCart.js" async></script>
    
    <style>
    </style>

</head>

<body style="background: url(https://img.wallpapersafari.com/desktop/1680/1050/97/73/nzX30o.jpg)">
    <section>
        <h2>CART</h2>
        <div class="cart-row">
            <span class="cart-item cart-header cart-column">ITEM</span>
            
            <span class="cart-price cart-header cart-column">PRICE</span>
            
            <span class="cart-quantity cart-header cart-column">QUANTITY</span>
        </div>
        <div class="cart-items">
            <div class="cart-row">

                <span class="cart-item cart-column cart-item-title">Columbian Supremo Small</span>

                <span class="cart-price cart-column">$3.99</span>
                <div class="cart-quantity cart-column">
                    <input class="cart-quantity-input" type="number" value="1" />
                    <button class="btn-danger cart-quantity-button" role="button">REMOVE</button>
                </div>
            </div>
            <div class="cart-row">
                <span class="cart-item cart-column cart-item-title">Columbian Supremo Medium</span>

                <span class="cart-price cart-column">$4.99</span>
                <div class="cart-quantity cart-column">
                    <input class="cart-quantity-input" type="number" value="1" />
                    <button class="btn-danger cart-quantity-button" role="button">REMOVE</button>
                </div>
            </div>
        </div>
            
            <div class="cart-total">
                <span class="cart-total-title">Total</span>
                <span class="cart-total-price">$8.98</span>
            </div>
            <button class="btn btn-primary btn-purchase" role="button">PURCHASE</button>
</section>


</body>

</html>



